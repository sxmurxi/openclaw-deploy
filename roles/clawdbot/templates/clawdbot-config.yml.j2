# Clawdbot Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# AI Model Configuration
ai:
  provider: {{ clawdbot_ai_provider }}
  openai_api_key: "{{ openai_api_key }}"
  model: {{ clawdbot_ai_model }}
  max_tokens: {{ clawdbot_ai_max_tokens }}

# Gateway Settings
gateway:
  port: {{ clawdbot_port }}
  web_ui: true

# Logging
logging:
  level: info
  file: {{ clawdbot_config_dir }}/clawdbot.log

# Security
security:
  allowed_numbers: []
  rate_limit:
    enabled: true
    max_requests_per_minute: 10

# Advanced Settings
advanced:
  session_timeout: 60
  auto_reconnect: true
  keep_alive_interval: 30
